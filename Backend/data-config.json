{
  "description": "Locket Backend - Modular JSON Database Configuration",
  "version": "1.0.0",
  "teams": {
    "team-a": {
      "name": "Auth/Profile Team",
      "responsibility": "User authentication, registration, and profile management",
      "files": ["users.json"],
      "endpoints": [
        "/api/users",
        "/api/auth/login",
        "/api/auth/register",
        "/api/auth/profile"
      ]
    },
    "team-b": {
      "name": "Friends/Social Team", 
      "responsibility": "Friend requests, social connections, and relationship management",
      "files": ["friendships.json"],
      "endpoints": [
        "/api/friendships",
        "/api/friendships/pending",
        "/api/friendships/accept",
        "/api/friendships/block"
      ]
    },
    "team-c": {
      "name": "Core Feature Team",
      "responsibility": "Photo upload, management, and core app functionality",
      "files": ["photos.json"],
      "endpoints": [
        "/api/photos",
        "/api/photos/upload",
        "/api/photos/user/:userId",
        "/api/photos/public"
      ]
    },
    "team-d": {
      "name": "Engagement Team",
      "responsibility": "Reactions, likes, comments, and user engagement features",
      "files": ["reactions.json"],
      "endpoints": [
        "/api/reactions",
        "/api/reactions/photo/:photoId",
        "/api/reactions/user/:userId"
      ]
    },
    "admin": {
      "name": "Admin Team",
      "responsibility": "System administration, content moderation, and user management",
      "files": ["users.json", "photos.json", "reactions.json"],
      "endpoints": [
        "/api/admin/users",
        "/api/admin/photos",
        "/api/admin/reactions",
        "/api/admin/analytics",
        "/api/admin/moderate",
        "/api/admin/system"
      ]
    }
  },
  "database": {
    "mainFile": "db.json",
    "dataDirectory": "data/",
    "backupDirectory": "backups/",
    "syncStrategy": "modular"
  },
  "api": {
    "baseUrl": "http://localhost:3001",
    "version": "v1",
    "cors": {
      "origin": ["http://localhost:3000", "http://localhost:19006"],
      "credentials": true
    }
  },
  "development": {
    "hotReload": true,
    "watchFiles": ["data/*.json"],
    "autoBackup": true,
    "logLevel": "info"
  }
}
