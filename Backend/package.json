{
  "name": "locket-backend",
  "version": "1.0.0",
  "description": "Backend API cho ứng dụng Locket sử dụng JSON Server",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "json-server": "json-server --watch db.json --port 3001",
    "sync-to-main": "node scripts/sync-data.js sync-to-main",
    "sync-from-main": "node scripts/sync-data.js sync-from-main",
    "backup": "node scripts/sync-data.js backup",
    "status": "node scripts/sync-data.js status",
    "teams": "node scripts/sync-data.js teams",
    "admin": "node scripts/sync-data.js admin",
    "validate-admin": "node scripts/sync-data.js validate-admin",
    "setup": "npm run sync-to-main && npm run backup"
  },
  "keywords": ["locket", "api", "json-server", "backend"],
  "author": "Locket Team",
  "license": "MIT",
  "dependencies": {
    "json-server": "^0.17.4",
    "cors": "^2.8.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
