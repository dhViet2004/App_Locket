            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"conversationId\": \"{{conversation_id}}\",\n  \"content\": \"Xin chào! Bạn khỏe không?\",\n  \"type\": \"text\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/chat/messages",
              "host": ["{{base_url}}"],
              "path": ["api", "chat", "messages"]
            }
